LIBNETFILTER_QUEUE_CFLAGS="-I${PKG}/usr/include" \
LIBNETFILTER_QUEUE_LIBS="-L${PKG}/usr/lib$(libdirsuffix) -lnetfilter_queue" \
configure
make ${JOBS} V=1
make install DESTDIR="${PKG}"
